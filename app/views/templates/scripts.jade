case env
  when 'production'
    script(src="assets/js/app.min.js")
  when 'debug'
    script(src="assets/js/app.js")
  default

    // Shims
    script(src='assets/js/components/respond.js/respond.min.js')
    script(src='assets/js/components/modernizr/modernizr.js')

    // jQuery and Related
    script(src='assets/js/components/jquery/jquery.js')
    script(src='assets/js/components/hammerjs/dist/hammer.js')

    // bootstrap
    script(src='assets/js/components/bootstrap/dist/js/bootstrap.js')
    script(src='assets/js/components/bootstrap-datepicker/js/bootstrap-datepicker.js')
    script(src='assets/js/components/bootstrap-timepicker/js/bootstrap-timepicker.js')

    // AngularJS libraries
    script(src='assets/js/components/angular/angular.js')
    script(src='assets/js/components/angular-strap/dist/angular-strap.js')

    // AngularJS library dependencies
    script(src='assets/js/components/bootstrap-select/bootstrap-select.js')
    script(src='assets/js/components/angular-strap/vendor/bootstrap-datepicker.js')

    // Angular UI libraries
    script(src='assets/js/components/angular-ui-bootstrap/dist/ui-bootstrap-0.4.0.js')
    script(src='assets/js/components/angular-ui-bootstrap/dist/ui-bootstrap-tpls-0.4.0.js')
    script(src='assets/js/components/angular-ui-router/release/angular-ui-router.js')
    script(src='assets/js/components/angular-ui-utils/components/angular-ui-docs/build/ui-utils.js')

    // logger
    script(src='assets/js/components/javascript-debug/ba-debug.js')

    // utilities
    script(src='assets/js/components/lodash/dist/lodash.js')
    script(src='assets/js/components/moment/moment.js')
    script(src='assets/js/components/add-to-homescreen/src/add2home.js')
    script(src='assets/js/components/faker/Faker.js')

    each script in applicationScripts
      script(src=script)